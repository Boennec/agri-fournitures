{% extends 'base.html.twig' %}

{% block title %}Nos produits Agri-fournitures
{% endblock %}

{% block content %}
	<h1>Nos produits</h1>

	<div class="row produit-container">

		{% for produit in produits %}

			<div class="col-md-4">
				<div class="produit-item text-center">
					<h5>{{ produit.nom }}</h5>
					<a href="{{ path('produit', { 'slug' : produit.slug }) }}"><img src="/uploads/{{ produit.illustration }}" alt="{{ produit.nom }}" class="img-fluid">
						<span class="produit-soustitre">{{ produit.soustitre }}</span>
						<span class="produit-prix">{{ (produit.prix / 100) | number_format(2, ',', '.') }}â‚¬</span>
					</div>
				</div>
			{% endfor %}

		</div>

	{% endblock %}
